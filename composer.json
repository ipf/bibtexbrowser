{
  "name": "monperrus/bibtexbrowser",
  "description": "bibtexbrowser is a PHP script that creates publication lists from Bibtex files. bibtexbrowser is stable, mature and easy to install.",
  "homepage": "https://www.monperrus.net/martin/bibtexbrowser/",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Martin Monperrus",
      "homepage": "https://www.monperrus.net/martin/",
      "role": "Original Developer"
    }
  ],
  "require": {
    "php": ">=8.0",
    "ext-simplexml": "*",
    "ext-json": "*"
  },
  "autoload": {
    "psr-4": {
      "BibtexBrowser\\BibtexBrowser\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BibtexBrowser\\BibtexBrowser\\tests\\": "tests/"
    }
  },
  "scripts": {
    "serve": [
      "@php -S localhost:29896 ./tests/router.php"
    ]
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "rector/rector": "^0.11",
    "phpunit/phpunit": "^9.5"
  }
}
